                    <Image Height="24" Source="/ArtemisManagerUI;component/Resources/startup.png" />
                </StackPanel>
            </Button>-->



        </WrapPanel>

        <!--<StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding ElementName=uc, Path=LastStatus, Mode=OneWay}" />
        </StatusBar>-->



        <TabControl
            SelectedItem="{Binding ElementName=uc, Path=SelectedTabItem}"
            TabStripPlacement="Bottom">
            <TabItem Visibility="Collapsed">
                <TabItem.Header>
                    <WrapPanel>
                        <Image Height="16" Source="/ArtemisManagerUI;component/Resources/wrench.png" />
                        <TextBlock Text="Mods &amp; Missions" />
                    </WrapPanel>
                </TabItem.Header>
                <DockPanel
                    local:DragHelper.DragScopeId="DragScope1">
                    <DockPanel
                        DockPanel.Dock="Right" >
                        <TabControl
                            Tag="{Binding ElementName=uc, Mode=OneWay, Path=SelectedPeer}"
                            Width="400">
                            <TabItem
                                AllowDrop="True"
                                DragEnter="OnModDragEnter"
                                DragLeave="OnModDragLeave"
                                DragOver="OnModDragOver"
                                Drop="OnModDrop"
                                Tag="InstalledMods" >
                                <TabItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Label VerticalAlignment="Center"  Content="Installed Mods" />
                                    </StackPanel>

                                </TabItem.Header>
                                <DockPanel>
                                    <DockPanel DockPanel.Dock="Top" >
                                        <Button
                                            Click="OnInstallMod" ToolTip="Install a Mod or Mission"
                                            Visibility="{Binding ElementName=uc, Path=ArtemisInstallFolder, Converter={StaticResource NullToVisibility},ConverterParameter='Collapsed|Visible'}">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="24" Source="/ArtemisManagerUI;component/Resources/install.png" />
                                                <Image Height="24" Source="/ArtemisManagerUI;component/Resources/tool-and-utensils.png"  />
                                            </StackPanel>
                                        </Button>
                                        <Button
                                            DockPanel.Dock="Top"
                                            HorizontalAlignment="Left"
                                            Click="OnDeactivateMods"
                                            Visibility="{Binding ElementName=uc, Path=ArtemisInstallFolder, Converter={StaticResource NullToVisibility},ConverterParameter='Collapsed|Visible'}"
                                            ToolTip="Deactivate All Mods by reseting activated Artemis folder to base Artemis" >
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="24" Source="/ArtemisManagerUI;component/Resources/deactivate.png" />
                                                <Image Height="24" Source="/ArtemisManagerUI;component/Resources/tool-and-utensils.png" />
                                            </StackPanel>
                                        </Button>
                                    </DockPanel>
                                    <ListBox
                                        Tag="{Binding ElementName=uc, Mode=OneWay, Path=IsMaster}"
                                        ItemsSource="{Binding ElementName=uc, Path=InstalledMods, Mode=OneWay}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>

                                                <local:ModItemControl
                                                    ModActivated="OnModActivated"
                                                    RemoteInstallMod="OnRemoteInstallMod"
                                                    ModUninstalled="OnModUninstalled"
                                                    IsMaster="{Binding Mode=OneWay, Path=(ListBox.Tag), RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                                                    IsRemote="False"
                                                    Mod="{Binding}" />

                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </DockPanel>
                            </TabItem>
                            <TabItem
                                AllowDrop="True"
                                DragEnter="OnMissionDragEnter"
                                DragLeave="OnMissionDragLeave"
                                DragOver="OnMissionDragOver"
                                Drop="OnMissionDrop"
                                Tag="InstalledMissions" >
                                <TabItem.Header>
                                    <Label Content="Installed Missions" />
                                </TabItem.Header>
                                <DockPanel>
                                    <Button
                                        DockPanel.Dock="Top" HorizontalAlignment="Left"
                                        Click="OnInstallMod" ToolTip="Install a Mod or Mission"
                                        Visibility="{Binding ElementName=uc, Path=ArtemisInstallFolder, Converter={StaticResource NullToVisibility},ConverterParameter='Collapsed|Visible'}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Height="24" Source="/ArtemisManagerUI;component/Resources/install.png" />
                                            <Image Height="24" Source="/ArtemisManagerUI;component/Resources/tool-and-utensils.png"  />
                                        </StackPanel>
                                    </Button>

                                    <ListBox
                                        Tag="{Binding ElementName=uc, Mode=OneWay, Path=IsMaster}"
                                        ItemsSource="{Binding ElementName=uc, Path=InstalledMissions, Mode=OneWay}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <local:ModItemControl
                                                    RemoteInstallMod="OnRemoteInstallMod"
                                                    ModUninstalled="OnMissionUninstalled"
                                                    IsMaster="{Binding Mode=OneWay, Path=(ListBox.Tag), RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                                                    IsRemote="False"
                                                    Mod="{Binding}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </DockPanel>
                            </TabItem>
                        </TabControl>
                    </DockPanel>
                    <GroupBox
                        Header="Connected Peers"
                        BorderThickness="2,2,2,2"
                        BorderBrush="CadetBlue"
                        Visibility="{Binding IsStarted, ElementName=uc, Converter={StaticResource BoolToVisibilityParameterConverter}, ConverterParameter='Visible|Collapsed'}">
                        <TabControl
                            SelectedValue="{Binding ElementName=uc, Mode=TwoWay, Path=SelectedPeer}"
                            Tag="{Binding ElementName=uc, Mode=OneWay, Path=IsMaster}"
                            ItemsSource="{Binding ConnectedPCs, Mode=OneWay, ElementName=uc}">

                            <TabControl.ItemContainerStyle>
                                <Style TargetType="TabItem">
                                    <Setter
                                        Property="Visibility"
                                        Value="{Binding IP, Converter={StaticResource IPLoopbackToVisibility}, ConverterParameter='Collapsed|Visible'}" />
                                </Style>
                            </TabControl.ItemContainerStyle>
                            <TabControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Hostname}" />
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <local:PeerInfoControl
                                        IsMaster="{Binding Mode=OneWay, Path=(TabControl.Tag), RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}"
                                        ItemData="{Binding}"
                                        ConnectedPCs="{Binding Mode=OneWay, Path=(TabControl.ItemsSource), RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}" >
                                    </local:PeerInfoControl>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </GroupBox>
                </DockPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock Text="PC Actions &amp; Settings" />
                    </WrapPanel>
                </TabItem.Header>
                <local:PCInfoTabControl
                    IsMaster="{Binding ElementName=uc, Path=IsMaster, Mode=TwoWay}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock Text="Mods" />
                    </WrapPanel>
                </TabItem.Header>
                <local:ModTabControl
                    ShowMods="True"
                    IsMaster="{Binding ElementName=uc, Path=IsMaster, Mode=TwoWay}" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock Text="Missions" />
                    </WrapPanel>
                </TabItem.Header>
                <local:ModTabControl
                    ShowMods="False"
                    IsMaster="{Binding ElementName=uc, Path=IsMaster, Mode=TwoWay}" />
            </TabItem>


            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <Image Margin="0,0,5,0"  Height="16" Source="/ArtemisManagerUI;component/Resources/Settings-icon.png" />
                        <TextBlock Text="Localized Artemis.ini settings" TextWrapping="Wrap" />
                    </WrapPanel>
                </TabItem.Header>
                <local:ArtemisINITabControl />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <Image Margin="0,0,5,0" Height="16" Source="/ArtemisManagerUI;component/Resources/Presets.png" />
                        <TextBlock Text="Engineering Presets" TextWrapping="Wrap" />
                    </WrapPanel>
                </TabItem.Header>
                <local:EngineeringPresetTabControl />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock Text="controls.ini" />
                    </WrapPanel>
                </TabItem.Header>
                <local:TextFileTabControl FileType="controlsINI" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock Text="DMXCommands.xml" />
                    </WrapPanel>
                </TabItem.Header>
                <local:TextFileTabControl FileType="DMXCommandsXML" />
            </TabItem>
            <TabItem Tag="Chat">
                <TabItem.Header>
                    <Label>
                        <TextBlock Text="Chat" />
                        <Label.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding ElementName=uc, Path=ChatAlert}"
                                        Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        To="Red"
                                                        Storyboard.TargetProperty="(Label.Background).(SolidColorBrush.Color)"
                                                        FillBehavior="Stop"
                                                        AutoReverse="True" RepeatBehavior="Forever"
                                                        Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        To="Transparent"
                                                        Storyboard.TargetProperty="(Label.Background).(SolidColorBrush.Color)"
                                                        FillBehavior="Stop"
                                                        Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </TabItem.Header>
                <local:ChatControl
                        ChatReceived="OnChatReceived"
                        ConnectedPCs="{Binding ElementName=uc, Path=ConnectedPCs}" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <WrapPanel>
                        <TextBlock Text="Activity" />
                    </WrapPanel>
                </TabItem.Header>
                <ListBox
                    ItemsSource="{Binding Status, ElementName=uc, Mode=OneWay}"
                    VerticalAlignment="Top"
                    local:ListBoxBehavior.AutoScroll="True" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
